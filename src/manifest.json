{
  "manifest_version": 3,
  "name": "TogglXUrenregistratie",
  "version": "1.0",
  "description": "TogglTrack intergration into Urenregistratie",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
