{
  "name": "toggl-xurenregistratie",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:popup": "ng build",
    "build:content": "esbuild src/content/content.ts --bundle --minify --outfile=dist/extension/browser/content.js --platform=browser --target=es2020",
    "build": "npm run build:popup && npm run build:content",
    "watch:popup": "npm run build:popup -- --watch --configuration development",
    "watch:content": "npm run build:content -- --watch",
    "watch": "concurrently --kill-others --names \"POPUP,CONTENT\" -c \"blue,green\" \"npm run watch:popup\" \"npm run watch:content\"",
    "test": "ng test"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@primeuix/themes": "^1.2.1",
    "primeicons": "^7.0.0",
    "primeng": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.0",
    "@angular/cli": "^20.1.0",
    "@angular/compiler-cli": "^20.1.0",
    "@types/chrome": "^0.1.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
